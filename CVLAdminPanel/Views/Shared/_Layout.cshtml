<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - CVLinked Admin Panel</title>
    <!-- Favicon -->
    <link rel="icon" href="~/Content/img/fav.png" type="image/icon type">
    <!-- CSS Files -->
    <!-- Fonts -->

    <!-- Icons -->
    <link href="~/Content/fontawesome-free-5.15.1-web/css/all.css" rel="stylesheet" />
    <link href="~/DataTables-1.10.20/css/dataTables.bootstrap4.css" rel="stylesheet" crossorigin="anonymous" />

    <link href="~/Content/css/style.css" rel="stylesheet" />
    <link href="/css/StyleSheet.css" rel="stylesheet" />
    <link href="/css/cards.css" rel="stylesheet" />
    <link href="/css/color.css" rel="stylesheet" />
    <link id="dark-mode-css" href="" rel="stylesheet" />

</head>
<body>

    @Html.Partial("_SideBar")
    <div class="main-content">
        <!-- Navbar -->
        @Html.Partial("_Header")
        <!-- End Navbar -->
        <div class="main">

            @{ var controller = ViewContext.RouteData.Values["controller"].ToString();

                if (controller == "Dashboard")
                {
                        <div class="main-content-part-dashboard">
                            @RenderBody()
                        </div>
                }
                else
                {
                    <div class="p-4 main-content-part">
                        <div>
                            @Html.Partial("Notification/_notificationView")
                        </div>
                        @RenderBody()
                    </div>
                }
            }
            @Html.Partial("_Footer")
        </div>
    </div>
    <!--   Core   -->
    <!--   Core   -->
    <script src="~/Content/ckeditor/ckeditor.js"></script>
    <script src="~/Content/js/plugins/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/Content/popper.js/1.14.7/dist/umd/popper.min.js"></script>
    <script src="~/DataTables-1.10.20/js/jquery.dataTables.js"></script>
    <script src="~/DataTables-1.10.20/js/dataTables.bootstrap4.js"></script>

    <script src="~/Content/js/plugins/bootstrap/dist/js/moment.js"></script>
    <script src="~/Content/js/plugins/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="~/js/custom.js"></script>
    <script src="~/js/JavaScript.js"></script>
    <script src="~/js/scripts.js"></script>
    <script src="~/js/datatables.js"></script>
</body>
</html>