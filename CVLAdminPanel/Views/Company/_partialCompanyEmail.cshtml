@model CVLAdminPanel.Models.Model.Company
<div class="modal-content">
    <div class="modal-header">
        <div class="">
            <h3><i class="far fa-paper-plane text-default"></i> Send Email to <b>@(string.IsNullOrEmpty(Model.companyName) ? "N/A" : Model.companyName)</b></h3>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true"><i class="fas fa-times"></i></span>
        </button>
    </div>
    <div class="modal-body">
        <form method="post" asp-action="SendEmail" asp-controller="Company">
            <div class="form-group">
                <label for="FormControlInputSubject">Subject</label>
                @Html.TextBox("subject", "Greeting from CVLinked", new { @class = "form-control", @placeholder = "Enter your Email Subject", @required = "required" })
            </div>
            <div class="form-group">
                <label for="FormControlInputEmail">To</label>
                @Html.TextBox("ToEmail", @Model.email, new { @type = "email", @class = "form-control bg-white", @required = "required", @readonly = "readonly" })
            </div>
            <div class="form-group">
                <label for="FormControlTextareaContent">Email Body</label>
                <textarea  id="emailContent" asp-for="@Model.companyName" required class="form-control">Dear<b>@Model.companyName</b></textarea>
            </div>
            <input type="submit" class="btn btn-primary" />
        </form>
    </div>
</div>

<script type="text/javascript">
    CKEDITOR.replace('emailContent');
</script>