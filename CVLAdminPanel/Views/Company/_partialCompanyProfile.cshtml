@model CVLAdminPanel.Models.Model.Employer
@{
    var image_url = "";
    if (string.IsNullOrEmpty(Model.companyInfo.companyLogoName))
    {
        image_url = "~/Content/img/fav.png";
    }
    else
        image_url = "https://s3.ap-south-1.amazonaws.com/cvlinked/CorporateLogos/" + @Model.companyInfo.companyLogoName;
}
@{
    ViewData["Title"] = "Employer Profile";
    ViewBag.HeaderTitle = "EMPLOYER DETAILS";
    ViewBag.Header = "PROFILE";
}

<div class="m-2">
    <div class=" row pt-1">
        <div class="text-left col-md-6">
            <h2 class="font-weight-normal"><a asp-action="Index"><i class="fas fa-angle-double-left"></i></a>&nbsp; @Model.companyInfo.companyName</h2>
        </div>

        <div class=" text-right col-md-6">
            <ul class="nav justify-content-end nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item">
                    <div class="dropdown text-right">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-cogs text-primary"></i> &nbsp;Actions
                        </button>
                        <div class="dropdown-menu">
                            <button title="Send Email" type="button" class="dropdown-item  btn btn-pink" data-toggle="modal" data-target="#company-email-modal" data-id="@Model.employerId"><i class="fas fa-paper-plane text-default"></i> Send Email</button>
                            <button title="Send SMS" type="button" class="dropdown-item  btn btn-pink" data-toggle="modal" data-target="#sms-modal" data-id="@Model.employerId"><i class="fas fa-comments text-warning"></i> Send SMS</button>
                        </div>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="true">
                        Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="false">
                        Package History
                    </a>
                </li>

            </ul>

        </div>
    </div>

    <div class="tab-content" id="pills-tabContent">

        <div class="tab-pane fade show active" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
            @Html.Partial("Employer/Profile")
        </div>

        <div class="tab-pane fade" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
            @Html.Partial("Employer/PackageHistory")
        </div>
    </div>
</div>


