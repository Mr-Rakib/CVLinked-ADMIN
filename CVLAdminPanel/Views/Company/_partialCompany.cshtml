@model CVLAdminPanel.Models.Model.Company

<div class="col-xl-3 col-lg-6">
    <div class="card card-stats mb-4 shadow">
        <div class="card-header">
            <div class="row">
                <div class="col">
                    <div class="">
                        @if (string.IsNullOrEmpty(Model.companyLogoName))
                        {
                            <img src="~/Content/img/brand/logo.png" class="company-logo" />
                        }
                        else
                        {
                            <img class="company-logo" src="https://s3.ap-south-1.amazonaws.com/cvlinked/CorporateLogos/@Html.DisplayFor(modelItem => Model.companyLogoName)" />
                        }

                        <h5 class="h5 card-title text-muted mb-0 mt-2">
                            @(Model.companyName == "" ? "Not Set" : Model.companyName)  @{ if (Model.confirmedEmail)
                                { <i class="fa fa-check-circle text-success"></i>}
                                else
                                {<i class="fa fa-times-circle text-danger"></i>}
                            }
                        </h5>
                    </div>
                    <div class="text-xs text-pink pt-1">
                        <i class="fas fa-phone-square"></i> @(Model.registeredPhoneNo == "" ? "N/A" : Model.registeredPhoneNo)
                    </div>
                    <div class="btn-delete-company">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close" data-toggle="modal" data-target="#deleteComapnyModal">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <p class="mt-2 mb-0 text-muted text-sm media align-items-center">
                <span class="text-default mr-2 media align-items-center"><i class="fas fa-user"></i></span>
                <span class="text-nowrap">@(Model.contactPerson.contactPersonName == "" ? "Not Set" : Model.contactPerson.contactPersonName)</span>
            </p>
            <p class="mt-2 mb-0 text-muted text-sm media align-items-center">
                <span class="text-default mr-2 media align-items-center"><i class="fas fa-mobile"></i></span>
                <span class="text-nowrap">@(Model.contactPerson.contactPersonMobile == "" ? "Not Set" : Model.contactPerson.contactPersonMobile)</span>
            </p>

            <p class="mt-2 mb-0 text-muted text-sm media align-items-center">
                <span class="text-default mr-2 media align-items-center"><i class="fas fa-envelope-open-text"></i></span>
                <span class="text-nowrap company-email-address">@(Model.email == "" ? "Not Set" : Model.email)</span>
            </p>

        </div>
        <div class="card-footer text-right bg-secondary">
            <a href="" class="p-2" title="Send Email" data-toggle="modal" data-target="#company-email-modal" data-id="@Model.employerId"><i class="far fa-paper-plane text-default"></i></a>
            <a href="" class="p-2" title="Send SMS" data-toggle="modal" data-target="#sms-modal" data-id="@Model.employerId"><i class="far fa-comments text-default"></i></a>
            <a data-toggle="modal" data-target="#view-details-modal" data-id="@Model.employerId" class="p-2" title="View Details"><i class="far fa-eye text-default"></i></a>
        </div>
    </div>
</div>


<!-- Delete Company confirmation Modal -->
<div class="modal fade" id="deleteComapnyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure want to delete this company?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary">Yes Please!</button>
            </div>
        </div>
    </div>
</div>