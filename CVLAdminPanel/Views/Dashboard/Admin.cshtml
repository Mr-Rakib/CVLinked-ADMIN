@model CVLAdminPanel.Models.Model.DashboardData
@{
    ViewBag.Title = "Dashboard";
    ViewBag.HeaderTitle = "Dashboard";
    ViewBag.Action = "Index";
    ViewBag.Controller = "Dashboard";
}
<!--Content-->
<div class="header bg-gradient-primary pb-8 pt-5 p-4">
    <!-- Card stats -->
    <div class="row">

        <div class="col-xl-3 col-lg-6">
            <div class="card card-stats mb-4 mb-xl-0">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h5 class="card-title text-uppercase text-muted mb-1">Total @Model.DashboardInformations.Find(r => r.roleName.ToLower() == Roles.Employer).roleName</h5>
                            <span class="h2 font-weight-bold mb-0 ">
                                @Model.DashboardInformations.Find(r => r.roleName.ToLower() == Roles.Employer).count
                            </span>
                        </div>
                        <div class="col-auto">
                            <div class="icon icon-shape bg-primary text-white rounded-circle shadow">
                                <i class="fas fa-user-tie"></i>
                            </div>
                        </div>
                    </div>
                    <p class="mt-3 mb-0 text-muted text-sm border-custom col-md-12 ">
                        <span class="col-auto float-left" title="Confirmed"><i class="text-success fas fa-check-circle"></i>&nbsp; @Model.DashboardInformations.Find(r => r.roleName.ToLower() == Roles.Employer).confirmed</span>
                        <span class="col-auto float-right" title="Not Confirmed"><i class="text-danger fas fa-times-circle"></i>&nbsp; @Model.DashboardInformations.Find(r => r.roleName.ToLower() == Roles.Employer).unconfirmed</span>
                    </p>
                </div>
            </div>
